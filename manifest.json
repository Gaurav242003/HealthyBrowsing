{
    "manifest_version": 3,
    "name": "Healthy Browsing",
    "version": "1.0",
    "description": "Promote healthier screen habits with posture exercises, blue light filters, eye strain reduction tips, and regular break reminders.",
    "permissions": ["alarms", "storage", "activeTab", "notifications","tabs"],
    "background": {
      "service_worker": "background.js"
    },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
    "icons":{
        "128": "logo.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      }
    },
    "web_accessible_resources": [{
    "resources": ["notification.mp3"],
    "matches": ["<all_urls>"]
  }]
  }
  